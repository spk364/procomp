{
  "name": "procomp",
  "version": "0.1.0",
  "private": true,
  "description": "BJJ Tournament Management Platform - A modern alternative to SmoothComp",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "typecheck": "turbo run type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "e2e": "playwright test",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "prisma migrate deploy --schema packages/db/prisma/schema.prisma",
    "db:generate:root": "prisma generate --schema packages/db/prisma/schema.prisma",
    "seed:staging": "tsx scripts/seed.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "turbo": "^1.10.16",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
} 